# ========================================
# CONFIGURACIÓN DEL SERVIDOR TWILIO VOICE
# ========================================

# Puerto del servidor Flask
PORT=5000

# Modo debug (True/False)
DEBUG=False

# ========================================
# CONFIGURACIÓN DE RASA PRO
# ========================================

# URL del webhook de Rasa Pro
RASA_WEBHOOK_URL=http://localhost:5005/webhooks/rest/webhook

# ========================================
# CONFIGURACIÓN DE TWILIO (OPCIONAL)
# ========================================

# Account SID de Twilio (para logging)
TWILIO_ACCOUNT_SID=tu_account_sid_aqui

# Auth Token de Twilio (para logging)
TWILIO_AUTH_TOKEN=tu_auth_token_aqui

# ========================================
# CONFIGURACIÓN DE FALLBACK
# ========================================

# Número de teléfono para fallback (ejecutivo humano)
FALLBACK_PHONE_NUMBER=+56982221070

# ========================================
# CONFIGURACIÓN DE VOZ (POLLY)
# ========================================

# Voz de Amazon Polly a usar
POLLY_VOICE=Polly.Mia

# Idioma de la voz
POLLY_LANGUAGE=es-MX

# Velocidad de habla (0.5 = lento, 2.0 = rápido)
POLLY_SPEED=1.0

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
