# ========================================
# CONFIGURACIÓN DE FRESHDESK
# ========================================

# API Key de Freshdesk (obtener desde tu cuenta de Freshdesk)
API_KEY=tu_api_key_aqui

# Dominio de Freshdesk (sin https:// y sin .freshdesk.com)
DOMAIN=tu_dominio_aqui



# ========================================
# CONFIGURACIÓN DE BASE DE DATOS (OPCIONAL)
# ========================================

# URL de conexión a PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/sctbnk_cards

# URL de conexión a MongoDB
MONGODB_URL=mongodb://localhost:27017/sctbnk_cards

# ========================================
# CONFIGURACIÓN DE RASA PRO (OPCIONAL)
# ========================================

# Token de Rasa Pro
RASA_TOKEN=tu_rasa_token_aqui

# ========================================
# CONFIGURACIÓN DE LOGGING (OPCIONAL)
# ========================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=./logs/rasa.log
